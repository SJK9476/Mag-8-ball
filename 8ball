var userName = 'Samuel';

var userQuestion = 'What is the meaning of life';

var randomNumber = Math.floor(Math.random() * 8);

var eightBall = ["It is certain", "It is decidedly so", "Reply hazy try again", "Stop being an idiot!", "Cannot predict right now", "The gods have said No", "Do not count on it", "Why would you ask such a stupid question"] ;

if (userName === undefined) {
    console.log ('Hello!');
} else {
    console.log (`Hello ${userName}`);
}

console.log(`So ${userName}, you want to know ${userQuestion}?`);

if (randomNumber === 0) {
    console.log(eightBall[0]);
} else if (randomNumber === 1){
    console.log(eightBall[1]);
} else if (randomNumber === 2){
    console.log(eightBall[2]);
} else if (randomNumber === 3){
    console.log(eightBall[3]);
}else if (randomNumber === 4){
    console.log(eightBall[4]);
} else if (randomNumber === 5){
    console.log(eightBall[5]);
} else if (randomNumber === 6){
    console.log(eightBall[6]);
}else if (randomNumber === 7){
    console.log(eightBall[7]);
}
